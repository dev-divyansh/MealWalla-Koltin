<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="416dp"
                android:layout_height="220dp"
                android:contentDescription="@string/app_name">

                <LinearLayout
                    android:layout_width="414dp"
                    android:layout_height="235dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="411dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="20dp"
                        app:srcCompat="@drawable/poster1" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        app:srcCompat="@drawable/poster2" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="413dp"
                android:layout_height="258dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="20dp"
                android:padding="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="408dp"
                    android:layout_height="257dp"
                    android:layout_weight="1"
                    android:paddingRight="20dp"
                    app:srcCompat="@drawable/p3" />
                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="408dp"
                    android:layout_height="257dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/p1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="413dp"
                android:layout_height="258dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="20dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="408dp"
                    android:layout_height="257dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/p2" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="408dp"
                    android:layout_height="257dp"
                    android:layout_weight="1"
                    android:paddingRight="20dp"
                    app:srcCompat="@drawable/p1" />

            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/animation_view"
                app:lottie_rawRes="@raw/feedback"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Us on PlayStore"
                android:textSize="25dp"
                android:elevation="30dp"
                android:gravity="center"/>

            <ImageView
                android:layout_width="135dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_rate_review_24" />


            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNav"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:menu="@menu/nav_menu" />




        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>